{% extends "layout.html.twig" %}


{% block content %}

      <link rel="stylesheet" href="{{ asset('css/article_list.css') }}" type="text/css">




    <section class="introblog">
        <h2 class="actutitle">L'actu</h2>
    </section>


    <section  class="containeractu">

        <section class="sectionactu">

            {% for article in articles %}
                <div class="left">
                    <div class="actuimg" style="background-image: url('{{ asset('img/' ~ article.picture) }}" alt="photo de l'article {{article.title}}')"></div>
                </div>


                <div class="actuarticle">
                    <h3>{{ article.title }}</h3>
                    <aside><small> dans {{ article.category_name }}</small></aside>

                    <div class="traitprofile"></div>

                        <p class="descriptionourproject">{{ article.short_content }}</p>
                        <div class="btn_plus"><a target="_blank" href="{{path('article', {id: article.id_article})}}"><img src="{{ asset('img/btn_plus.png') }}" alt="bouton en savoir plus"></a></div>
                           
                    <div class="clear"></div>
                </div>

        </section>

    </section>
        
    <section  class="containeractu">

        <section class="sectionactu">

                {% if not loop.last %}

                {%endif%}
        
        </section>
            {% endfor %}


        

    </section>
        


{% endblock %}
    
