    <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css">

{% endblock %}

</head>

<body>

    <header>

        {# Afficher la barre de navigation uniquement pour les admin #}
        {% if user_manager.admin %}
            
            <nav>
                <a id="navAdmin" class="nobar"href="#"><i class="fa fa-bars" aria-hidden="true"></i> Gestion Admin</a>
                <ul id="menuAdmin">
                    <li><a href="{{path('admin_users')}}">Utilisateurs</a></li>
                    <li><a href="{{path('admin_products')}}">Produits</a></li>
                    <li><a href="{{path('admin_subscription')}}">Abonnements</a></li>
                    <span>
                        <li><a href="{{path('admin_pickuplocation')}}">Points relais</a></li>
                        <li><a href="{{path('admin_articles')}}">Le blog</a></li>
                        <li><a href="{{path('admin_shipping')}}">Livraison</a></li>
                    </span>
                    
                </ul>
            </nav>
            
        {% endif %}

        

        <nav>
            <ul>

              
               <li id="icotopright" class="nobar">
                  <a href="{{path('panier')}}"><i class="fa fa-shopping-basket" aria-hidden="true"></i><span> Panier</span></a>
                </li>
                
               
                <a href="{{path('home')}}" id="lg" class="nobar"><img src="{{ asset('img/logo_fleurdici.png') }}" alt="logo"></a>
                <article id="mainNav">                   
                        <li><a href="{{path('project')}}">Le projet</a></li>
                        <li><a href="{{path('abonnement')}}">La boutique</a></li>
                        <li><a href="{{path('blog')}}">Les carnets</a></li>
                        <li><a href="{{path('whoweare')}}">Qui sommes nous ?</a></li>                        
                        <li><a href="{{path('contact')}}">Contact</a></li>     
                        <li id="gift_card2"><a href="{{path('gift_card')}}"><i class="fa fa-gift" aria-hidden="true"></i>  <span>Activez votre carte cadeau</span></a></li>
                </article>
                <a id="menu" class="nobar" href="#"><i class="fa fa-bars" aria-hidden="true"></i></a>
                {# Si l'utilisateur est connecté #}
                {% if user_manager.userConnected %}
 
                    <li onclick="myFunction();" id="moncompte">
                        <div id="dropdown" class="nobar">
                            <a class="dropbtn"><i class="fa fa-user-circle" aria-hidden="true"></i><span> Mon compte</span></a>

                            <div id="myDropdown" class="dropdown-content">
                                <a href="{{path('profil')}}">Profil</a>
                                <a href="{{path('logout')}}">Déconnexion</a>
                                
                            </div>
                        </div>
                            
                    </li>              

                {# Si non #}
                {% else %}
                    
                    <li onclick="myFunction();" id="moncompte">
                        <div id="dropdown" class="nobar">
                            <a class="dropbtn"><i class="fa fa-user-circle" aria-hidden="true"></i><span> Se connecter</span></a>

                            <div id="myDropdown" class="dropdown-content">
                                <a href="{{path('login')}}">Connexion</a>
                                <a href="{{path('register')}}">Inscription</a>
                            </div>
                        </div>
                            
                    </li>
                {% endif %}
                
                <li id="gift_card"><a href="{{path('gift_card')}}"><i class="fa fa-gift" aria-hidden="true"></i>  <span>Activez votre carte cadeau</span></a></li>
            </ul>
        </nav>

    </header>

    <main>

     {# Boucle qui permet de mettre en forme les messages générés lorsqu'on clique su un bouton #}

        {% for label, flashes in global.session.flashbag.all %}
           {% for flash in flashes %}

                    {% if label == 'error' %}
                        {% set label = 'danger' %}
                    {% endif %}
                    
                    <div class="alert alert-{{ label }}">{{ flash|raw }}</div>
                {% endfor %}
            {% endfor %}
        {# Affichage du contenu de chaque page #}
        {% block content %}{% endblock %}
    </main>

    <footer>
         <section id="footer1"> 
            <section id="section1">
                <h3>Les fleurs d'ici</h3>
