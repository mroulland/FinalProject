{% extends "layout.html.twig" %}

{% block title %}Produits{% endblock %}

{% block stylesheet %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('css/admin_list.css')}}">
{% endblock %}

{% block content %}

    <section class="admin">
        <h2>Liste des produits</h2>
        <a href="{{ path('admin_product_ajout') }}" class="add-button">Ajouter un produit</a>

        <table>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Taille</th>
                <th>Fréquence</th>
                <th>Photo</th>
                <th>Prix</th>
                <th width="200px">Actions</th>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.idproduct }}</td>
                    <td>{{ product.productname }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.size }}</td>
                    <td>{% if product.frequency == 'once_a_month' %}une fois par mois {%elseif product.frequency == 'twice_a_month' %}deux fois par mois{% endif %}</td>
                    <td>{{ product.photo }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        <a href="{{ path('admin_product_edit', { id: product.idproduct }) }}" >
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>

                        <a href="#" class="pop" data-id="{{ product.idproduct }}">
                           <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                
                <!-- Aside pour la modale de validation de suppression -->
                <aside id="modal">  
                    <span>Êtes-vous sûrs de vouloir supprimer l'utilisateur ? </span>  
                    <a href="{{ path('admin_product_delete', { id: product.idproduct }) }}" class="btn remove">Supprimer définitivement</a>  
                    <a  id="closeModal" class="btn cancel">Annuler</a>  
                </aside> 
            {% endfor %}
        </table>
    </section>
{% endblock %}

{% block javascripts %}      
    {{ parent() }}
    <script src="{{asset('js/modal.js')}}"> </script>  
{% endblock %}
