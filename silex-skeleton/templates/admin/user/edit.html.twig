{% extends "layout.html.twig" %}

{% block title 'Admin users' %}

{% block stylesheet %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('css/admin_list.css')}}">
{% endblock %}

{% block content %}
    
    <section class="admin">
    <h2>Modifications des infos utilisateurs</h2>
    
    <form method="post">
        <article>
            <label>Nom</label>
            <input type="text" name="lastname" value="{{ user.lastname }}" >
        </article>
        <article>
            <label>Prénom</label>
            <input type="text" name="firstname" value="{{ user.firstname }}" >
         </article>   
            <label>Email</label>
            <input type="text" name="email" value="{{ user.email }}" >
            
            <label>Mot de passe</label>
            <input type="password" name="password" value="" >
            
            <label>Adresse</label>
            <textarea name="address" >{{ user.address }}</textarea>
        <article>    
            <label>Code postal</label>
            <input type="text" name="zipcode" value="{{ user.zipcode }}" >
        </article>
        <article>    
            <label>Ville</label>
            <input type="text" name="city" value="{{ user.city }}" >
        </article>    
            <label>Téléphone</label>
            <input type="text" name="phone" value="{{ user.phone }}" >
            
            <label>Statut</label>
            <select name="status" id="status">
                <option value="user">Utilisateur</option>              
                <option value="admin">Admin</option>
                <option value="collaborator">Collaborateur</option>
            </select>
      
       
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('admin_users') }}" class="btn btn-default">Annuler</a>
    </form>
    
    </section>

{% endblock %}
