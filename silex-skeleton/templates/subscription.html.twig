{% extends "layout.html.twig" %}

{% block content %}

    <h1>Abonnement</h1>

     <form method="post" action="" id="formabonnement">
        
              <select name="frequency">
                    <option value="null">--Frequence--</option>
                    <option value="once a month">Une fois par mois</option>
                    <option value="twice a month">Deux fois par mois</option>
            </select>

            <select name="size">
                    <option value="null">--Choisissez la taille de votre bouquet--</option>
                    <option value="moyen">Moyen</option>
