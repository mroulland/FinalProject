{% extends "layout.html.twig" %}

{% block title %}Produits{% endblock %}

{% block content %}

    <table>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Descritption</th>
            <th>photo</th>
            <th>prix</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id_product }}</td>
                <td>{{ product.product_name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.photo }}</td>
                <td>{{ product.price }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
