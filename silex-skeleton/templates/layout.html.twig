                <p><a href="{{path('abonnement')}}">La boutique</a></p>
                <p><a href="{{path('blog')}}">Les carnets</a></p>
                <p><a href="{{path('gift_card')}}">Activer ma carte cadeau</a></p>
            </section>

            <section id="section2">
                <h3>A propos</h3>
                <p><a href="{{path('whoweare')}}#profiles">Qui sommes-nous</a></p>
                <p><a href="{{path('contact')}}#formcontact">Contactez-nous</a></p>
                <p><a href="">FAQ</a></p>
                <p><a href="{{path('contact')}}#place">Plan du site</a></p>
                <p><a href="">Mentions légales</a></p>
